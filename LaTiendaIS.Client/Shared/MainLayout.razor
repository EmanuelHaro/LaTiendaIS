@inherits LayoutComponentBase


<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<PageTitle>La Tienda</PageTitle>

<MudLayout>
    <MudAppBar Color="Color.Primary" Fixed="false">
        <MudIconButton Icon="@Icons.Material.Filled.ShoppingCart" aria-label="latienda"></MudIconButton>
        <MudText>La Tienda de IS</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.People" aria-label="usuario"></MudIconButton>
        <MudText>Usuario: Ian</MudText>
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>


@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}




